<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>
            {{ITClubWeb}}
        </title>
        {{! <link rel="stylesheet" href="/public/styles/output.css"> }}
        <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    </head>
    <body class="bg-red-700 flex flex-col items-center lg:bg-gradient-to-r from-white to-[#DA283F] lg:justify-center min-h-screen">
        <h1 class="hidden lg:block lg:text-6xl lg:font-medium mt-8">
            Sign In
        </h1>

        <!-- Main Container -->
        <div class="flex flex-col items-center w-full px-4 mt-20 mb-40 lg:flex-row-reverse lg:justify-center lg:gap-x-40">
            <!-- Logo Section -->
            <div class="mb-8 lg:mb-0">
                <img src="images/logo.png" alt="Logo" class="w-32 h-40 lg:w-96 lg:h-56 object-contain" />
            </div>

            <!-- Form Section -->
            <div class="w-full max-w-xs">
                <form id="login_form" action="" method="POST" class="space-y-6">
                    <input type="email" id="email" placeholder="Email" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500" />

                    <input type="password" id="password" placeholder="Password" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500" />

                    <!-- Register & Sign In Buttons -->
                    <div class="flex items-center justify-end gap-5">
                        <a href="#" class="text-white text-sm underline hover:text-gray-200">
                            Register?
                        </a>
                        <button type="submit" class="bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition-colors">
                            Sign in
                        </button>
                    </div>
                </form>

                <!-- Social Login - Mobile Only -->
                <div class="mt-6 flex justify-center space-x-4 lg:hidden">
                    <img src="/public/images/github-icon.png" alt="GitHub" class="w-10 h-10" />
                    <img src="/public/images/google-icon.png" alt="Google" class="w-10 h-10" />
                </div>
            </div>
        </div>



        <script>
            window.onload = async () => {
                const result = await fetch('http://localhost:8000/api/users/6');
                const data = await result.json();
                console.log('data', data);
            }
        </script>
    </body>
</html>