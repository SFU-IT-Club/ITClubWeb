<script>
   
// design posts fetch
       async function fetchDesignPosts() {
    const designContainer = document.getElementById('devsignPostContainer');

    try {
        const response = await fetch('/api/design-posts');
        const { data: designPosts } = await response.json();

        if (!designPosts.length) {
            designContainer.innerHTML = '<p class="text-gray-500">No events found.</p>';
            return;
        }

        console.log('design posts', designPosts);
        designContainer.innerHTML = designPosts.map(renderDesignPostCard).join('');

    } catch (err) {
        console.error('Fetch error:', err);
        designContainer.innerHTML = '<p class="text-gray-500">There was an error fetching posts.</p>';
    }
}

// design posts render
function renderDesignPostCard(post) {
    const { created_at, contributors, figma_link } = post;

    // date
    const date = new Date(created_at);
    const month = date.toLocaleString('default', { month: 'short' }).toUpperCase();
    const day = date.getDate();
    const year = date.getFullYear();

// contributors block
    const contributorBlock = Array.isArray(contributors)
        ? contributors.map(renderContributorBadge).join('')
        : renderContributorBadge(contributors);



    return `
        <div class="bg-gray-900 rounded-lg overflow-hidden shadow-lg">
            <!-- Date -->
            <div class="bg-primary-red p-4 text-center">
                <div class="text-xl font-bold">${month} ${day}</div>
                <div class="text-sm">${year}</div>
            </div>

            <!-- Card Body -->
            <div class="p-6 space-y-4">

                <!-- Contributors -->
                <div class="mb-3 flex flex-wrap gap-2 items-center text-sm text-gray-400">
                    <span class="mr-2">Contributors:</span> ${contributorBlock}
                </div>

                <!-- Screenshot Carousel -->
                <div class="relative w-full max-w-2xl mx-auto overflow-hidden rounded-lg shadow-lg aspect-video bg-gray-800" id="carousel">
                    <div class="flex" id="designSlides">
                        <img src="/images/logo-colourful.png" class="w-full h-full object-contain flex-shrink-0" alt="Slide">
                    </div>

                    <!-- Controls -->
                    <button id="prevBtn" class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full hover:bg-gray-700 z-10">
                        &#10094;
                    </button>
                    <button id="nextBtn" class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full hover:bg-gray-700 z-10">
                        &#10095;
                    </button>
                </div>

                <!-- Figma Link -->
                <a href="${figma_link}" target="_blank" class="text-primary-red hover:underline font-medium block">
                    Figma Link â†’ ${figma_link}
                </a>
            </div>
        </div>
    `;
}

function renderContributorBadge(name) {
    return `<span class="bg-gray-700 text-gray-200 text-sm px-2 py-1 rounded-full">${name}</span>`;
}


    
