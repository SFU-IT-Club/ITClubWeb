    <script>
        // dev posts fetch

        async function fetchDevPosts() {
            const devcontainer = document.getElementById('devPostContainer');

            try {
                const response = await fetch('/api/dev-posts');
                const { data: devposts } = await response.json();

                if (!devposts.length) {
                    devcontainer.innerHTML = '<p class="text-gray-500">No events found.</p>';
                    return;
                }

                console.log('dev posts', devposts);
                devcontainer.innerHTML = devposts.map(renderDevPostCard).join('');

            } catch (err) {
                console.error('Fetch error:', err);
                devcontainer.innerHTML = '<p class="text-gray-500">There was an error fetching posts.</p>';
            }
        }
        // dev_posts render
        function renderDevPostCard(devpost) {
            const { title, created_at, contributors, file_path, repo_link } = devpost;

            // date
            const date = new Date(created_at);
            const month = date.toLocaleString('default', { month: 'short' }).toUpperCase();
            const day = date.getDate();
            const year = date.getFullYear();

            // contributors block
            const contributorBlock = Array.isArray(contributors)
                ? contributors.map(item => renderContributorBadge(item)).join('')
                : renderContributorBadge(contributors);

            return `
        <div class="bg-gray-900 rounded-lg overflow-hidden shadow-lg">
            <div class="bg-primary-red p-4 text-center">
                <div class="text-xl font-bold">${month} ${day}</div>
                <div class="text-sm">${year}</div>
            </div>
            <div class="p-6">
                <h3 class="text-xl font-bold mb-2">${title}</h3>
                <div class="mb-3 flex flex-wrap gap-2">Contributors: ${contributorBlock}</div>
                <p class="text-gray-400 mb-4 break-words">${file_path}</p>
                <a href="${repo_link}" target="_blank" class="text-primary-red hover:underline font-medium">
                    GitHub → ${repo_link}
                </a>
            </div>
        </div>
    `;
        }

        function renderContributorBadge(name) {
            return `<span class="bg-gray-700 text-gray-200 text-sm px-2 py-1 rounded-full">${name}</span>`;
        }

